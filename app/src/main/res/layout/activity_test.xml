        app:IT_text_selected_color="#00FFFF"
        app:IT_text_size="8sp"
        app:IT_text_unselected_color="#FF0000"
        app:IT_unselected_color="#00FF00"
        app:IT_unselected_icon="@mipmap/ic_launcher"
        >
    </talex.zsw.baselibrary.widget.IconText>

    <talex.zsw.baselibrary.widget.IconText
