<?xml version="1.0" encoding="utf-8"?>

<talex.zsw.baselibrary.view.TimesSquare.MonthView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/title"
        style="@style/CalendarTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/calendar_month_title_bottommargin"
        android:layout_marginTop="@dimen/calendar_month_topmargin"
        android:gravity="center_horizontal"
        />

    <talex.zsw.baselibrary.view.TimesSquare.CalendarGridView
        android:id="@+id/calendar_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <talex.zsw.baselibrary.view.TimesSquare.CalendarRowView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/calendar_day_headers_paddingbottom"
            >

            <TextView
                style="@style/CalendarCell.DayHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                style="@style/CalendarCell.DayHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                style="@style/CalendarCell.DayHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                style="@style/CalendarCell.DayHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                style="@style/CalendarCell.DayHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                style="@style/CalendarCell.DayHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                style="@style/CalendarCell.DayHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </talex.zsw.baselibrary.view.TimesSquare.CalendarRowView>

        <include layout="@layout/timesquare_week"/>

        <include layout="@layout/timesquare_week"/>

        <include layout="@layout/timesquare_week"/>

        <include layout="@layout/timesquare_week"/>

        <include layout="@layout/timesquare_week"/>

        <include layout="@layout/timesquare_week"/>
    </talex.zsw.baselibrary.view.TimesSquare.CalendarGridView>
</talex.zsw.baselibrary.view.TimesSquare.MonthView>