<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#606060"
    android:orientation="vertical">

    <talex.zsw.baselibrary.view.RoundedImageView.RoundedImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:src="@mipmap/icon"
        app:RIV_oval="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="RIV_oval = true"/>

    <talex.zsw.baselibrary.view.RoundedImageView.RoundedImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:RIV_corner_radius="10dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:src="@mipmap/icon"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="RIV_corner_radius = 10dp"/>

    <talex.zsw.baselibrary.view.RoundedImageView.RoundedImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:RIV_corner_radius="10dp"
        app:RIV_border_width="1dp"
        app:RIV_border_color="@color/red"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:src="@mipmap/icon"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="RIV_border_width = 1dp\nRIV_border_color = red"/>

</LinearLayout>